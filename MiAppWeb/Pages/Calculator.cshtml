@page
@model CalculatorModel
@{
    ViewData["Title"] = "Calculator page";
}
 
<div class="text-center">
    <p>
        @Model.Message
    </p>
    <h1 class="display-4"> Calculadora </h1>
 
    <form method="post">
        <label for="fnumber">First Number</label><br>
        <input type="number" id="fnumber" name="fnumber" asp-for="Fnumber"><br>
        <label for="Snumber">Second Number</label><br>
        <input type="number" id="snumber" name="snumber" asp-for="Snumber"><br>
        <label for="result">Result</label><br>
        <input type="number" id="result" name="result" asp-for="Result"><br>

        <input type="submit" value="Sumar" asp-page-handler="Add">
        <input type="submit" value="Restar" asp-page-handler="Sub">
        <input type="submit" value="Multiplicar" asp-page-handler="Mul">
        <input type="submit" value="Dividir" asp-page-handler="Div">
    </form>
</div>